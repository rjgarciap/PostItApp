<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>GetNoteServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.GetNoteServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PostNoteServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.PostNoteServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetNearNotesServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.GetNearNotesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetNoteServlet</servlet-name>
		<url-pattern>/getnote</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PostNoteServlet</servlet-name>
		<url-pattern>/postnote</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetNearNotesServlet</servlet-name>
		<url-pattern>/getnearnotes</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DeleteNoteServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.DeleteNoteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteNoteServlet</servlet-name>
		<url-pattern>/deletenote</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetUserNotesServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.GetUserNotesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetUserNotesServlet</servlet-name>
		<url-pattern>/getusernotes</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UpdateNoteServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.UpdateNoteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateNoteServlet</servlet-name>
		<url-pattern>/updatenote</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LoginModeratorServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.LoginModeratorServlet</servlet-class>
	</servlet>
		<servlet-mapping>
		<servlet-name>LoginModeratorServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ShowNotesModeratorServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.ShowNotesModeratorServlet</servlet-class>
	</servlet>
		<servlet-mapping>
		<servlet-name>ShowNotesModeratorServlet</servlet-name>
		<url-pattern>/showNotes</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ShowUsersModeratorServlet</servlet-name>
		<servlet-class>es.upm.dit.PostItAppServer.ShowUsersModeratorServlet</servlet-class>
	</servlet>
		<servlet-mapping>
		<servlet-name>ShowUsersModeratorServlet</servlet-name>
		<url-pattern>/showUsers</url-pattern>
	</servlet-mapping>
		<servlet>
		<servlet-name>DeleteExpiredNotesCronServlet</servlet-name>
		<servlet-class>es.upm.dit.isst.todo.DeleteExpiredNotesCronServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteExpiredNotesCronServlet</servlet-name>
		<url-pattern>/deletecron</url-pattern>
	</servlet-mapping>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>cron</web-resource-name>
			<url-pattern>/deletecron</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

		
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>
